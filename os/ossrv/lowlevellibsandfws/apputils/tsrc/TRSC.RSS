STRUCT TBUF
	{
	BUF buf; /* non-zero terminated text string */
	}

STRUCT LBUF
	{
	LTEXT txt; // leading-byte counted text string
	}

STRUCT ARRAY
	{
	STRUCT items[];
	}

STRUCT BUTTON
	{
	WORD id;
	WORD flags;
	LTEXT txt;
	LTEXT txt2;
	LTEXT bmp;
	}

STRUCT FLPTED
	{
